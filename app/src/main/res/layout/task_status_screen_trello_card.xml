<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/task_status_trello_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/space_4"
    android:layout_marginEnd="@dimen/space_4"
    android:layout_marginTop="@dimen/space_3"
    android:layout_marginBottom="@dimen/space_3"
    card_view:cardCornerRadius="@dimen/space_2"
    card_view:cardElevation="@dimen/space_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_status_trello_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_2"
            android:textSize="@dimen/text_headline"/>

        <TextView
            android:id="@+id/task_status_trello_card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_2"
            android:textSize="@dimen/text_subhead"/>

    </LinearLayout>

</android.support.v7.widget.CardView>