<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/space_4"
    >

    <LinearLayout
        android:id="@+id/timer_pomodoro_text_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timer_pomodoro_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_pomodoro_counter"
            android:textSize="@dimen/text_headline"/>

        <TextView
            android:id="@+id/timer_pomodoro_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/timer_pomodoro_total"
            android:textSize="@dimen/text_headline"/>
    </LinearLayout>


    <TextView
        android:id="@+id/timer_pomodoro_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_pomodoro_text_section"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/space_3"
        android:layout_marginTop="@dimen/space_3"
        android:text="@string/timer_pomodoro_timer"
        android:textColor="@color/red"
        android:textSize="@dimen/text_xxl"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/timer_pomodoro_action_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_pomodoro_timer"
        android:layout_marginTop="@dimen/space_3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/timer_pomodoro_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_4"
                android:layout_weight="1"
                android:text="@string/timer_pomodoro_pause"/>

            <Button
                android:id="@+id/timer_pomodoro_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/timer_pomodoro_stop"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timer_pomodoro_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_4"
                android:layout_weight="1"
                android:text="@string/timer_pomodoro_done"/>

            <Button
                android:id="@+id/timer_pomodoro_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/timer_pomodoro_back"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timer_pomodoro_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_4"
                android:layout_weight="1"
                android:text="@string/timer_pomodoro_five"/>

            <Button
                android:id="@+id/timer_pomodoro_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/timer_pomodoro_fifteen"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>