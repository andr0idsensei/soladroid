<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:gravity="center"
    >

    <TextView
        android:id="@+id/timer_pomodoro_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Pomodoros: 5"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/timer_pomodoro_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_pomodoro_counter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="25:00"
        android:textSize="64sp"
        android:textColor="@color/red"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/timer_pomodoro_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer_pomodoro_timer"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Time spent: 00:50:00"
        android:textSize="22sp"/>

    <RelativeLayout
        android:id="@+id/timer_pomodoro_running_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_below="@id/timer_pomodoro_total">

        <Button
            android:id="@+id/timer_pomodoro_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Pause"/>

        <Button
            android:id="@+id/timer_pomodoro_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Stop"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timer_pomodoro_finished_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/timer_pomodoro_total">

        <Button
            android:id="@+id/timer_pomodoro_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Done"/>

        <Button
            android:id="@+id/timer_pomodoro_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer_pomodoro_done"
            android:layout_alignParentStart="true"
            android:text="Take Five"/>

        <Button
            android:id="@+id/timer_pomodoro_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Back"/>

    </RelativeLayout>

</RelativeLayout>